<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"

        android:id="@+id/header_left">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/header_left_text"
            android:padding="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/header_right_text"
            android:layout_toRightOf="@id/header_left_text"

            android:padding="20dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/start_button"
        android:layout_alignBottom="@+id/header_right_text"
        android:layout_toRightOf="@+id/header_right_text"
        android:layout_toEndOf="@+id/header_right_text"

        android:minWidth="40dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:id="@+id/stop_button"
        android:layout_below="@+id/start_button"
        android:layout_toRightOf="@+id/header_right_text"
        android:layout_toEndOf="@+id/header_right_text"

        android:minWidth="40dp"/>

</RelativeLayout>



